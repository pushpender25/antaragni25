{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "typeRoots": ["./types"],
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.mjs",
    ".next/types/**/*.ts",
    "types"
  ],
  "exclude": ["node_modules"]
}
